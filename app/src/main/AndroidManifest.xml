<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.e_clinic">

    <!-- Required for video/audio calls -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Optional but recommended -->
    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- For Bluetooth headsets -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- For call notifications -->

    <!-- Declare hardware features (optional but prevents Play Store filtering) -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />
    <uses-feature android:name="android.hardware.audio.output" android:required="false" />

    <application
        android:name=".ui.activities.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Eclinic"
        tools:targetApi="31">
        <activity
            android:name=".ZEGOCloud.ChatActivity"
            android:exported="true" />
        <activity
            android:name=".ZEGOCloud.MainActivity"
            android:exported="true" />
        <activity
            android:name=".ZEGOCloud.CallActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:configChanges="keyboardHidden|orientation|screenSize" /> <!-- Prevent activity restart on rotation -->
        <activity
            android:name=".ui.activities.user_screens.UserLogInActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Eclinic">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Video call activity (internal only) -->
        <activity
            android:name=".ZEGOCloud.VideoCallActivity"
            android:exported="true" /> <!-- Chat activities -->
        <activity
            android:name=".ZEGOCloud.ConversationActivity"
            android:exported="false" />
        <activity
            android:name=".ZEGOCloud.LogActivity"
            android:exported="true" /> <!-- User flow -->
        <activity
            android:name=".ui.activities.user_screens.AppointmentActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.logIn_screen.LogInActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.user_screens.UserSignUpActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.user_screens.UserActivity"
            android:exported="true" /> <!-- Doctor flow -->
        <activity
            android:name=".ui.activities.doctor_screens.DoctorActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.doctor_screens.DoctorLogInActivity"
            android:exported="true" /> <!-- Admin flow -->
        <activity
            android:name=".ui.activities.admin_screens.AdminActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.admin_screens.AdminLogInActivity"
            android:exported="true" />
        <activity
            android:name=".ZEGOCloud.MainActivity"
            android:exported="true" />
    </application>

</manifest>